{% extends "adminLayout.njk" %}

{% block head %}
  <title>Foodfy - Chef</title>
{% endblock %}

{% block content %}

  <section class="create">
    <form id="formCreate" method="post" action="/admin/chefs" enctype="multipart/form-data">

      <div class="form-head">
        <h1>Criando chef</h1>
        <a class="cancelButton" href="/admin/chefs">Cancelar</a>
        <button type="submit">Salvar chef</button>
      </div>

      {% include "admin/chefs/chef-name-field.njk" %}

      <div id="chef-avatar">
        <div>Avatar</div>
        <div id="avatar-upload">
          <input 
            id="avatar-input"
            type="file"
            name="avatar"
            accept="image/*"
            value=""
            >
          <p>Enviar Avatar</p>
        </div>
      </div>

    </form>
  </section>
  
{% endblock %}