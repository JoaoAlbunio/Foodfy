{% for chef in chefs %}
  <div class="card-chef ">
    <div class="card__avatar-container">
      <div style="background-image: url({{chef.avatar_url}})"></div>
    </div>
    <div class="card__chef-info">
      <h2>{{chef.name}}</h2>
      {% for total in count %}
        {% if total.id == chef.id %}
          {% if total.total_recipes >= 2 %}
            <p>{{total.total_recipes}} receitas</p>
          {% else %}
            <p>{{total.total_recipes}} receita</p>
          {% endif %}
        {% endif %}
      {% endfor %}
    </div>
  </div>
{% endfor %}